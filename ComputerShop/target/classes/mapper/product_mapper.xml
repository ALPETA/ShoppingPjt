<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hardCarry.shopping.dao.ProductDAO">
	<select id="finalSeq" resultType="long">
		SELECT max(p_seq)
		FROM `product`
	</select>

	<select id="findAll" parameterType="hashMap" resultType="AdminProductViewEntity">
		SELECT *
		FROM `product` p, `product_spec` s
		WHERE p.p_seq = s.ps_pSeq AND p.p_name like CONCAT('%',#{search},'%')
		LIMIT #{page},#{size}
	</select>

	<select id="countAll" resultType="long" parameterType="string">
		SELECT count(*)
		FROM `product` p, `product_spec` s
		WHERE p.p_seq = s.ps_pSeq AND p.p_name like CONCAT('%',#{search},'%')
	</select>

	<insert id="save" parameterType="ProductEntity">
		INSERT INTO `product` VALUES (NULL,'',#{p_name},#{p_price},#{p_manufacture},#{p_etc},#{p_sumnailImgPath},#{p_stock},#{p_state},#{p_Date})
	</insert>
	
	<update id="update" parameterType="ProductEntity">
		UPDATE `product`
		SET p_code = #{p_code}
		WHERE p_seq = #{p_seq}
	</update>
	
	
	
</mapper>